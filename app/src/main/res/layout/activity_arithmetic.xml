<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFormula"
            android:layout_width="700px"
            android:layout_height="220px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tv_dialog"
            android:textColor="@color/app_text_tip"
            android:textSize="50sp"
            android:clickable="true"
            android:gravity="center"/>
        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="wrap_content"
            android:layout_height="220px"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:gravity="bottom"
            android:background="@drawable/equal"
            />
        <TextView
            android:id="@+id/tvShowHelp"
            android:layout_width="180px"
            android:clickable="true"
            android:layout_height="220px"
            android:gravity="bottom"
            android:textSize="50sp"
            android:background="@drawable/question"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:orientation="vertical"
        android:background="@drawable/panel">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="270px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_1"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="34px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_2"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="95px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_3"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="100px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="270px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_4"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="34px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_5"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="95px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_6"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="100px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="270px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_7"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="34px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_8"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="95px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/btnI_9"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="270px"
                android:layout_height="270px"
                android:layout_marginLeft="100px"
                fresco:actualImageScaleType="fitCenter"
                android:scaleType="fitCenter"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="@string/app_go_squaredUp"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recordInput"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_margin="0sp"
            android:textColor="#ff0000"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/app_go_score"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="0sp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ff0000"/>
        <TextView
            android:id="@+id/app_go_count"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="0sp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ff0000"/>
        <TextView
            android:id="@+id/app_go_timeOut"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_margin="0sp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ff0000"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/textNumber"
        android:clickable="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:actualImageScaleType="fitXY"
        android:scaleType="fitXY"/>
</com.zhy.autolayout.AutoLinearLayout>
