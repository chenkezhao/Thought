<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ckz.thought">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_width"
            android:value="1080"></meta-data>
        <meta-data
            android:name="design_height"
            android:value="1920"></meta-data>

        <activity android:name=".app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.ArithmeticActivity">
        </activity>

        <activity android:name=".app.MemoryActivity">
        </activity>

        <activity
            android:name=".app.ReactionActivity"
            android:theme="@style/AppTheme"
            android:icon="@android:drawable/ic_menu_help"
            android:label="actionbar">
        </activity>
        <activity android:name=".app.SettingActivity"></activity>
    </application>

</manifest>
